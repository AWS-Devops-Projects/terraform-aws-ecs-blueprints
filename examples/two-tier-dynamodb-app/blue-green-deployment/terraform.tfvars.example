# Global / general variables
aws_profile      = "deploys"
aws_region       = "eu-central-1"
environment_name = "blueprints-example"
tags = {
  app = "blueprints-example"
}

# Networking
vpc = "vpc-123456789"
private_subnets_client = [
  "subnet-abc",
  "subnet-123",
]
private_subnets_server = [
  "subnet-abc",
  "subnet-123",
]
public_subnets = [
  "subnet-abc",
  "subnet-123",
]

# ECS
ecs_cluster_name = "blueprints-example"
ecs_cluster_id = "arn:aws:ecs:eu-central-1:123456789012:cluster/blueprints-example"

ecs_service_name = {
  client = "service-client"
  server = "service-server"
}

ecs_task_client_cpu    = 256
ecs_task_client_memory = 512
ecs_task_server_cpu    = 256
ecs_task_server_memory = 512

cpu_threshold = {
  client = "80"
  server = "80"
}

memory_threshold = {
  client = 80
  server = 80
}

ecs_desired_tasks = {
  client = 1
  server = 1
}

ecs_autoscaling_min_capacity = {
  client = 1
  server = 1
}

ecs_autoscaling_max_capacity = {
  client = 8
  server = 8
}

seconds_health_check_grace_period = 30

# GitHub connection
repository_owner = ""
repository_name = ""
repository_branch = ""
github_token = ""